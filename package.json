{
  "name": "home-hub",
  "version": "1.0.0",
  "description": "Secure home management application",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "jsonwebtoken": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "pg": "^8.11.3",
    "node-cron": "^3.0.2",
    "ws": "^8.13.0",
    "ping": "^0.4.4",
    "network": "^0.7.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}